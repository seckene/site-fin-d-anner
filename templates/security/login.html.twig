{% extends 'base.html.twig' %}


{% block stylesheets %}
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
{% endblock %}





{% block body %}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow-sm rounded mt-5" style="background-color: #1a365d; color: white;">
                <div class="card-body">
                    <h1 class="h3 mb-4 text-center">Connexion</h1>

                    <form method="post">
                        {# Affiche une erreur si l'utilisateur a mal rempli les champs #}
                        {% if error %}
                            <div class="alert alert-danger">
                                {{ error.messageKey|trans(error.messageData, 'security') }}
                            </div>
                        {% endif %}

                        {# Si l'utilisateur est déjà connecté #}
                        {% if app.user %}
                            <div class="mb-3 text-white">
                                Vous êtes connecté en tant que {{ app.user.userIdentifier }},
                                <a href="{{ path('app_logout') }}" class="text-warning">Se déconnecter</a>
                            </div>
                        {% endif %}

                        <div class="mb-3">
                            <label for="username" class="form-label">Nom d'utilisateur</label>
                            <input type="text" value="{{ last_username }}" name="_username" id="username"
                                   class="form-control" autocomplete="username" required autofocus>
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">Mot de passe</label>
                            <input type="password" name="_password" id="password"
                                   class="form-control" autocomplete="current-password" required>
                        </div>

                        <input type="hidden" name="_csrf_token"
                               value="{{ csrf_token('authenticate') }}">

                        {# Décommente ceci si tu veux activer "se souvenir de moi" #}
                        {#
                        <div class="form-check mb-3">
                            <input type="checkbox" class="form-check-input" id="remember_me" name="_remember_me">
                            <label class="form-check-label" for="remember_me">Se souvenir de moi</label>
                        </div>
                        #}

                        <button class="btn btn-light w-100" type="submit">
                            Se connecter
                        </button>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

{% endblock %}
