{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block stylesheets %}
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
{% endblock %}

{% block body %}

<div class="container py-5">

    <h1 class="mb-4 mt-5">Liste des utilisateurs</h1>

    <table class="table table-striped table-bordered align-middle">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Nom d'utilisateur</th>
                <th>Rôles</th>
                <th>Mot de passe (hash)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.username }}</td> {# ou user.username si défini #}
                    <td>{{ user.roles ? user.roles|join(', ') : '' }}</td>
                    <td><code class="text-muted" style="font-size: 0.8rem;">{{ user.password|slice(0, 20) ~ '...' }}</code></td>
                    <td>
                        <a href="{{ path('user_show', {'id': user.id}) }}" class="btn btn-sm btn-outline-info">Voir</a>
                        <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-sm btn-outline-secondary">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="text-center text-muted">Aucun utilisateur trouvé.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="text-end">
        <a href="{{ path('user_new') }}" class="btn btn-primary">Créer un nouvel utilisateur</a>
    </div>
</div>
{% endblock %}
