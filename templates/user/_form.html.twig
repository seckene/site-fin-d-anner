<div class="card shadow-sm p-4 mb-4" style="max-width: 600px; margin: auto;">
    <h2 class="mb-4 text-center">{{ button_label|default('Enregistrer') }}</h2>

    {{ form_start(form) }}

    {% for child in form %}
        {% if child.vars.name != '_token' %}
            <div class="mb-3">
                {{ form_label(child, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(child, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(child) }}
            </div>
        {% endif %}
    {% endfor %}

    <div class="d-flex justify-content-center mt-4">
        <button type="submit" class="btn btn-primary btn-lg">{{ button_label|default('Enregistrer') }}</button>
    </div>

    {{ form_end(form) }}
</div>
