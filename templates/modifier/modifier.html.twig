{% extends 'base.html.twig' %}

{% block body %}
<div class="d-flex justify-content-center align-items-center">
  <div class="card" style="width: 80rem; height: 10rem; margin-top: 10rem;">
    <table class="table table-striped table-bordered align-middle">
      <thead>
        <tr>
          <th>Nom d'utilisateur</th>
          <th>Email</th>
          <th>Téléphone</th>
          <th>Mot de passe (hash)</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>{{ user.username }}</td>
          <td>{{ user.email }}</td>
          <td>{{ user.tel }}</td>
          <td>{{ user.password }}</td>
         <td> <button class="btn btn-primary">modifier</button></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

{% endblock %}
