<!-- PREMIER GROUPE : 4 premières cartes -->
<div class="container mt-5">
    <div class="row g-4">
        {% for produit in produits|slice(0, 4) %}
        <div class="col-md-6 col-lg-3">
            <a href="{{ path('app_produit_show_detaille', {'id': produit.id}) }}" class="text-decoration-none">
