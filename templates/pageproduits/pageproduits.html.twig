{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block stylesheets %}
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
{% endblock %}

{% block body %}





<div class="container py-5">
<div class="container mt-4">
    <h1 class="text-center">Nos Produits</h1>
    <p class="text-center text-muted">Découvrez notre sélection exclusive de produits soigneusement choisis pour vous.</p>
</div>

<div class="card shadow-sm mb-4 border-start border-4" style="border-color: #1a365d;">
    <div class="card-body">
        <h4 class="mb-4 text-primary" style="color:#1a365d;">Filtrer les produits</h4>

        {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
            <div class="row g-3">
                <div class="col-md-4">
                    {{ form_row(form.categorie, {'attr': {'class': 'form-select'}}) }}
                </div>
                <div class="col-md-4">
                    {{ form_row(form.minPrice, {'attr': {'class': 'form-control', 'placeholder': 'Prix min'}}) }}
                </div>
                <div class="col-md-4">
                    {{ form_row(form.maxPrice, {'attr': {'class': 'form-control', 'placeholder': 'Prix max'}}) }}
                </div>
            </div>

            <div class="mt-3 text-end">
                <button type="submit" class="btn btn-primary" style="background-color:#1a365d; border-color:#1a365d;">
                    Appliquer le filtre
                </button>
            </div>
        {{ form_end(form) }}
    </div>
</div>




 <div class="d-flex justify-content-center mb-4 mt-5">
        
  <div class="chaud">
    <div>
      {% for produit in produits %}
         <a href="{{ path('app_produit_show_detaille', {'id': produit.id}) }}" class="card-link text-decoration-none">
              <div class="card shadow-sm">
                  <img src="{{ asset('images/' ~ produit.photo) }}" class="card-img-top" alt="{{ produit.nom }}">
                  <div class="card-body">
                      <h5 class="card-title">{{ produit.nom }}</h5>
                      <p class="card-text">{{ produit.description }}</p>
                      <p class="fw-bold">{{ produit.prix }} €</p>
                  </div>
              </div>
          </a>
      {% endfor %}
    </div>
  </div>
</div>


<style>
.chaud {
  margin: 2rem;
}

.chaud > div {
  display: grid;
  grid-template-columns: repeat(3, 1fr); /* Desktop : 3 colonnes */
  gap: 2rem;
}

    .filter-card {
        border: 1px solid #dce3ef;
        border-radius: 8px;
        padding: 20px;
        background: #f8fafc;
        margin-bottom: 25px;
    }

    .filter-title {
        font-size: 22px;
        font-weight: 600;
        color: #1a365d;
        margin-bottom: 15px;
    }

    .btn-filter {
        background-color: #1a365d !important;
        border-color: #1a365d !important;
        color: white !important;
        padding: 10px 18px;
        border-radius: 6px;
        font-weight: 500;
        transition: 0.2s;
    }

    .btn-filter:hover {
        background-color: #12233d !important;
    }

/* Tablette */
@media (max-width: 992px) {
  .chaud > div {
    grid-template-columns: repeat(2, 1fr); /* 2 colonnes */
  }
}

/* Mobile */
@media (max-width: 576px) {
  .chaud > div {
    grid-template-columns: 1fr; /* 1 colonne */
  }
}


</style>
{% endblock %}
